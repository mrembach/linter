{
  "name": "figma-linter",
  "version": "1.0.0",
  "description": "A Figma plugin for linting design files",
  "main": "src/main.ts",
  "scripts": {
    "build": "build-figma-plugin --typecheck --minify",
    "watch": "build-figma-plugin --typecheck --watch"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^2.1.0",
    "@create-figma-plugin/utilities": "^2.1.0",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^2.1.0",
    "@create-figma-plugin/tsconfig": "^2.1.0",
    "@figma/plugin-typings": "^1.109.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "figma-plugin": {
    "id": "figma-linter",
    "name": "Figma Linter",
    "main": "src/main.ts",
    "ui": "src/ui.tsx",
    "permissions": ["teamlibrary"]
  }
}
